.turnplate_page{
    position: relative;
    z-index: 100;
    opacity: 1;
    background-color: #fff;
}
 .start{
        width: 135px;
        height: 135px;
        line-height: 135px;
        text-align: center;
        border-radius:50%; 
        background-color: gold;
        font-size: 24px;
        z-index: 100;
        position: absolute;
        left:50%;
        top:50%;
        transform: translate(-50%,-50%)
    }
    .turnplate{
      font-size:16px;
      background-size: 100% ;
      background-repeat: no-repeat;
    }
    canvas{
      width: 100%;
    }