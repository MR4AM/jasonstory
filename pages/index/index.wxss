/* index.wxss */
.swiper{
  margin: 0 auto;
  width: 400px;
  margin-bottom: 30px;
}
image{
  width: 100%;
  height: 100%;
}
.info{
  margin:0 auto;
  height: 80px;
  background-color: #fff;
  box-shadow: 10px #dcdcdc;
}
.usertab{
  margin: 0 auto;
  height: 100px;
  border-radius: 30px 30px 0 0;
  position: absolute;
  top:140px;
  width: 100%;
  background-color: #fff;
  z-index: 10;
  border-bottom: 5px solid #ccc;
}
.userinfo-avatar{
  border-radius: 50%;
  position: absolute;
  width: 80px;
  height: 80px;
  top:-20%;
  left:15%;
  transform: translateX(-50%);
}
.location{
  font-size: 14px;
  line-height: 30px;
  /* padding: 0 20px; */
  float:right;
}
.weathersw{
  width: 180px;
}
.gamenews{
  padding: 20px 0;
}
.title{
  border-bottom:1px solid #ccc;
  padding: 10px 10px;
}
.list{
  width: 100%;
  padding:10px 10px; 
  line-height: 36px;
  font-size: 16px;
  border-bottom: 1px solid #ccc;
}
video{
  margin: 0 auto;
  padding: 20px 10px;
  width: 90%;
  display: block;
  height: 200px;
}
.footer{
  padding: 10px 0;
  text-align: center;
  font-size: 16px;
  color:#ccc;
}