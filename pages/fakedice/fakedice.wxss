.fakedice .start{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  width: 200px;
  height: 200px;
  border-radius:50%;
  background-color: skyblue;
  text-align: center;
  line-height: 200px;
}
.dice{
  display: inline-block;
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 5px;
  margin: 5px;
  background-color: #ccc;

}