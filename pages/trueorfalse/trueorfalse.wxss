.mask{
  background-color: #000;
  opacity: .8;
  width: 100%;
  height: 1000px;
  position: absolute;
  top:0;
}
.modal{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-image: url('');
  background-color: #fff;
  width: 300px;
  height: 400px;
}
.modal button{
  width: 100%;
  position: absolute;
  bottom:0;
  background-color: orange;
}
.modal image{
  width: 100%;
  height: 300px;
}
.modal rich-text{
  text-align: center;
}

.fadeInUp{
    animation: fadeInUp 1s linear;
    -moz-animation: fadeInUp 1s linear;
    -webkit-animation: fadeInUp 1s linear;
    -o-animation: fadeInUp 1s linear;
}
.fadeIn{
    animation: fadeIn 1s linear;
    -moz-animation: fadeIn 1s linear;
    -webkit-animation: fadeIn 1s linear;
    -o-animation: fadeIn 1s linear;
}
.zoomIn{
    animation: zoomIn 1s linear;
    -moz-animation: zoomIn 1s linear;
    -webkit-animation: zoomIn 1s linear;
    -o-animation: zoomIn 1s linear;
}
@keyframes fadeIn{
    from{
        opacity: 0;
    }
    to{
        opacity: 1;
    }
}
@-webkit-keyframes fadeInUp{0%{-webkit-transform:translate3d(0,100%,0);opacity:0;transform:translate3d(0,100%,0)}to{-webkit-transform:translateZ(0);opacity:1;transform:translateZ(0)}}@keyframes fadeInUp{0%{-webkit-transform:translate3d(0,100%,0);opacity:0;transform:translate3d(0,100%,0)}to{-webkit-transform:translateZ(0);opacity:1;transform:translateZ(0)}}.fadeInUp{-webkit-animation-name:fadeInUp;animation-name:fadeInUp}
@-webkit-keyframes zoomIn{0%{-webkit-transform:scale3d(.3,.3,.3);opacity:0;transform:scale3d(.3,.3,.3)}50%{opacity:1}}@keyframes zoomIn{0%{-webkit-transform:scale3d(.3,.3,.3);opacity:0;transform:scale3d(.3,.3,.3)}50%{opacity:1}}.zoomIn{-webkit-animation-name:zoomIn;animation-name:zoomIn}
